<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
    a:layout_width="0dp"
    a:layout_height="wrap_content"
    a:layout_weight="1"
    a:background="@drawable/selector_list_item_main"
    a:gravity="center_horizontal"
    a:orientation="vertical"
    a:paddingBottom="@dimen/activity_bottom_margin">

    <ImageView
        a:id="@+id/image"
        a:layout_width="48dp"
        a:layout_height="48dp"
        a:src="@drawable/plus_100" />

    <TextView
        a:id="@+id/text"
        a:layout_width="wrap_content"
        a:layout_height="wrap_content"
        a:gravity="center_horizontal"
        a:text="text" />
</LinearLayout>